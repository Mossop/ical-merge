{
  "server": {
    "bind_address": "127.0.0.1",
    "port": 8080
  },
  "calendars": {
    "combined-work": {
      "sources": [
        {
          "url": "https://example.com/work.ics",
          "filters": {
            "allow": [
              {
                "pattern": "(?i)meeting"
              }
            ],
            "deny": [
              {
                "pattern": "(?i)optional",
                "fields": ["summary"]
              }
            ]
          },
          "modifiers": [
            {
              "type": "replace",
              "pattern": "^Meeting:",
              "replacement": "[WORK] ",
              "field": "summary"
            },
            {
              "type": "replace",
              "pattern": "Building A",
              "replacement": "Main Office",
              "field": "location"
            },
            {
              "type": "strip_reminders"
            }
          ]
        },
        {
          "url": "https://example.com/holidays.ics"
        }
      ]
    },
    "personal": {
      "sources": [
        {
          "url": "https://example.com/personal.ics"
        }
      ]
    }
  }
}
